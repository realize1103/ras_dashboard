{
  "name": "ras-dashboard",
  "version": "1.0.0",
  "description": "라즈베리파이 4 + 4인치 터치 모니터용 날씨 대시보드",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "raspberry-pi:build": "next build && next export",
    "raspberry-pi:start": "next start -p 3000",
    "raspberry-pi:install": "npm ci --production",
    "raspberry-pi:setup": "npm run raspberry-pi:install && npm run build",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "next build && next export && electron-builder",
    "electron-pack": "next build && next export && electron-builder --dir",
    "magic-mirror": "npm run electron-dev"
  },
  "dependencies": {
    "lucide-react": "^0.460.0",
    "next": "^15.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.5.4",
    "jest": "^29.7.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "wait-on": "^9.0.1"
  },
  "main": "electron/main.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "raspberry-pi",
    "dashboard",
    "weather",
    "touch-screen",
    "nextjs",
    "typescript",
    "electron",
    "magic-mirror"
  ],
  "author": "RAS Dashboard Team",
  "license": "MIT",
  "build": {
    "appId": "com.rasdashboard.app",
    "productName": "RAS Dashboard",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
