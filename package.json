{
  "name": "ras-dashboard",
  "version": "1.0.0",
  "description": "라즈베리파이 4 + 4인치 터치 모니터용 날씨 대시보드",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "raspberry-pi:build": "next build && next export",
    "raspberry-pi:start": "next start -p 3000",
    "raspberry-pi:install": "npm ci --production",
    "raspberry-pi:setup": "npm run raspberry-pi:install && npm run build"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "next": "^15.5.4",
    "lucide-react": "^0.460.0"
  },
  "devDependencies": {
    "typescript": "^5.7.2",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "tailwindcss": "^3.4.17",
    "postcss": "^8.4.49",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.5.4",
    "@eslint/eslintrc": "^3.2.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14",
    "ts-jest": "^29.2.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
